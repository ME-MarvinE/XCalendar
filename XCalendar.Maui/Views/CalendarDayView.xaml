<?xml version="1.0" encoding="utf-8" ?>
<xc:FramedLabel
    x:Class="XCalendar.Maui.Views.CalendarDayView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:xc="clr-namespace:XCalendar.Maui.Views"
    x:Name="MainCalendarDayView"
    Padding="0"
    x:DataType="{x:Type xc:CalendarDayView}"
    CornerRadius="100"
    HasShadow="False"
    HeightRequest="45"
    Text="{Binding DateTime.Day, Source={x:Reference MainCalendarDayView}}"
    WidthRequest="45">

    <xc:FramedLabel.GestureRecognizers>
        <TapGestureRecognizer Command="{Binding Command, Source={x:Reference MainCalendarDayView}}" CommandParameter="{Binding CommandParameter, Source={x:Reference MainCalendarDayView}}"/>
    </xc:FramedLabel.GestureRecognizers>

</xc:FramedLabel>