<?xml version="1.0" encoding="UTF-8" ?>
<Frame
    x:Class="XCalendar.FramedLabel"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:xc="clr-namespace:XCalendar"
    x:Name="MainFramedLabel"
    x:DataType="{x:Type xc:FramedLabel}">

    <Label
        CharacterSpacing="{Binding CharacterSpacing, Source={x:Reference MainFramedLabel}}"
        FontAttributes="{Binding FontAttributes, Source={x:Reference MainFramedLabel}}"
        FontFamily="{Binding FontFamily, Source={x:Reference MainFramedLabel}}"
        FontSize="{Binding FontSize, Source={x:Reference MainFramedLabel}}"
        FormattedText="{Binding FormattedText, Source={x:Reference MainFramedLabel}}"
        HorizontalTextAlignment="{Binding HorizontalTextAlignment, Source={x:Reference MainFramedLabel}}"
        LineBreakMode="{Binding LineBreakMode, Source={x:Reference MainFramedLabel}}"
        LineHeight="{Binding LineHeight, Source={x:Reference MainFramedLabel}}"
        MaxLines="{Binding MaxLines, Source={x:Reference MainFramedLabel}}"
        Text="{Binding Text, Source={x:Reference MainFramedLabel}}"
        TextColor="{Binding TextColor, Source={x:Reference MainFramedLabel}}"
        TextDecorations="{Binding TextDecorations, Source={x:Reference MainFramedLabel}}"
        TextTransform="{Binding TextTransform, Source={x:Reference MainFramedLabel}}"
        TextType="{Binding TextType, Source={x:Reference MainFramedLabel}}"
        VerticalTextAlignment="{Binding VerticalTextAlignment, Source={x:Reference MainFramedLabel}}"/>

</Frame>